<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
<domain-config cleartextTrafficPermitted="true">
    <domain includeSubdomains="true">hacker-news.firebaseio.com</domain>
    <domain includeSubdomains="true">hacker-news.firebaseio.com/v0</domain>
    <domain includeSubdomains="true">hacker-news.firebaseio.com/v0/topstories.json</domain>
    <domain includeSubdomains="true">hacker-news.firebaseio.com/v0/item/{}.json</domain>

</domain-config>
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>